{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/randomface-react/src/randomface.ts",
    "../../packages/randomface/src/utils/curvedpath.ts",
    "../../packages/randomface/src/utils/pointinpolygon.test.ts",
    "../../packages/randomface/src/utils/pointinpolygon.ts",
    "../../packages/randomface/src/utils/points.ts",
    "../../packages/randomface/src/randomface.ts"
  ],
  "exclude": ["node_modules"]
}
